{
  "name": "ARTBot",
  "version": "1.0.0",
  "description": "USP codelab 2024",
  "main": "./src/server.js",
  "scripts": {
    "start": "npm run style && npm run dev",
    "dev": "node --env-file=.env ./src/server.js",
    "style": "tailwindcss -i ./src/frontend/tailwind.css -o ./src/frontend/style.css",
    "format": "prettier ./src/backend ./src/frontend/pages/**/*.html ./src/frontend/htmx.js ./src/server.js --write"
  },
  "keywords": [
    "chatbot",
    "codelab",
    "art",
    "web"
  ],
  "type": "module",
  "author": "",
  "dependencies": {
    "highlight.js": "^11.10.0",
    "openai": "^4.60.1",
    "tailwindcss": "^3.4.12"
  },
  "devDependencies": {
    "prettier": "^3.3.3"
  }
}
